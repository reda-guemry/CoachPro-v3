
{% extends 'layout.twig' %}


{% block content %}
<div class="min-h-screen">
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-5xl font-bold mb-6">Connect with Professional Sports Coaches</h1>
            <p class="text-xl mb-8">Find the perfect coach for your fitness journey</p>
            <div class="space-x-4">
                <a href="/register" class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-purple-50 inline-block">Get Started</a>
                <a href="/seances" class="bg-purple-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-800 inline-block">Browse Sessions</a>
            </div>
        </div>
    </div>
    
    <!-- Features Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose Us?</h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-lg shadow-lg text-center hover:shadow-xl transition">
                <div class="text-purple-600 text-5xl mb-4"><i class="fas fa-user-tie"></i></div>
                <h3 class="text-xl font-bold mb-2">Professional Coaches</h3>
                <p class="text-gray-600">Certified and experienced trainers ready to help you achieve your goals</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg text-center hover:shadow-xl transition">
                <div class="text-purple-600 text-5xl mb-4"><i class="fas fa-calendar-check"></i></div>
                <h3 class="text-xl font-bold mb-2">Easy Booking</h3>
                <p class="text-gray-600">Book sessions in just a few clicks with our simple interface</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg text-center hover:shadow-xl transition">
                <div class="text-purple-600 text-5xl mb-4"><i class="fas fa-chart-line"></i></div>
                <h3 class="text-xl font-bold mb-2">Track Progress</h3>
                <p class="text-gray-600">Monitor your fitness journey and see real results</p>
            </div>
        </div>
    </div>
    
    <!-- CTA Section -->
    <div class="bg-purple-50 py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">Ready to Start Your Fitness Journey?</h2>
            <p class="text-gray-600 mb-8">Join thousands of satisfied athletes working with our professional coaches</p>
            <a href="/register" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 inline-block">Sign Up Now</a>
        </div>
    </div>
</div>

{% endblock %}